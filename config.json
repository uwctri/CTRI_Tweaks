{
    "name": "CTRI Tweaks",
    "description": "Various minor project tweaks.",
    "namespace": "UWMadison\\CTRItweaks",
    "authors": [{
        "name": "Adam Nunez",
        "email": "Adam.Nunez@ctri.wisc.edu",
        "institution": "UW Madison - Center for Tobacco Research and Intervention "
    }],
    "permissions": [
        "redcap_every_page_top",
        "redcap_data_entry_form",
        "redcap_data_entry_form_top",
        "redcap_project_home_page",
        "redcap_survey_page",
        "redcap_survey_page_top"
    ],
    "system-settings": [{
        "key": "testing-global",
        "name": "<b>Testing Global:</b><br>Used for Testing and Staging projects",
        "type": "text"
    }],
    "project-settings": [{
            "key": "project-home-alert",
            "name": "<b>Home page alert</b>",
            "type": "textarea"
        },
        {
            "key": "unverified-name",
            "name": "<b>Rename 'Unverified' on Record Home to</b>",
            "type": "text"
        },
        {
            "key": "toggle-tweaks-start",
            "name": "tableStart",
            "type": "descriptive"
        },
        {
            "key": "disable-em",
            "name": "Disable features being ported to another EM",
            "type": "checkbox"
        },
        {
            "key": "support-12-hour-input",
            "name": "Add 12 hour validation to time fields",
            "type": "checkbox"
        },
        {
            "key": "align-th-top",
            "name": "Align record home page table headers to top of cell",
            "type": "checkbox"
        },
        {
            "key": "force-save-next-form",
            "name": "Set all 'Save &...' Buttons to 'Save & Go To Next Form'",
            "type": "checkbox"
        },
        {
            "key": "prevent-enter-submit",
            "name": "Prevent 'enter' from activating the 'Save & Exit Form' Button",
            "type": "checkbox"
        },
        {
            "key": "hide-save-next-record",
            "name": "Hide 'Save & Go To Next Record' on forms",
            "type": "checkbox"
        },
        {
            "key": "hide-send-survey-link",
            "name": "Hide 'Send Survey Link' step on the 'Save & Return Later' survey page",
            "type": "checkbox"
        },
        {
            "key": "hide-send-survey-email",
            "name": "Hide 'Log out & Open Survey' & 'Compose survey invitiation' from Survey Options menu on data collection screens",
            "type": "checkbox"
        },
        {
            "key": "hide-survey-tools",
            "name": "Hide 'Survey Distribution Tools' from the left side menu",
            "type": "checkbox"
        },
        {
            "key": "lock-complete-instruments",
            "name": "Lock (readonly, easily unlocked by user) instruments as read only when they are saved as complete?",
            "type": "checkbox"
        },
        {
            "key": "hide-instruments-on-forms",
            "name": "Hide all instruments when on data entry forms",
            "type": "checkbox"
        },
        {
            "key": "stop-dag-rename",
            "name": "Use incremental record ID when DAGs enabled",
            "type": "checkbox"
        },
        {
            "key": "toggle-tweaks-end",
            "name": "tableEnd",
            "type": "descriptive"
        },
        {
            "key": "system-management-event",
            "name": "<b>Move event to seperate table:</b><br>Used for System Managment event on the Record Home Page that don't represent a visit",
            "type": "event-list"
        },
        {
            "key": "cross-project-pipe",
            "name": "<b>Cross Project Pipe from:</b><br>Pipe in data from another project that shares record ids with this one.",
            "type": "project-id"
        },
        {
            "key": "hide-form-row-list",
            "name": "<b>Forms to hide</b><br>Record Home Page",
            "type": "sub_settings",
            "sub_settings": [{
                "key": "hide-form-row",
                "name": "<b>Form</b>",
                "type": "form-list",
                "repeatable": true
            }]
        },
        {
            "key": "hide-events-list",
            "name": "<b>Events to Hide</b><br>Record Home Page",
            "type": "sub_settings",
            "sub_settings": [{
                "key": "hide-events",
                "name": "<b>Event</b>",
                "type": "event-list",
                "repeatable": true
            }]
        },
        {
            "key": "prevent-navigation-instrument-list",
            "name": "<b>Intruments to Block Navigation to</b><br>Redirect to record home",
            "type": "sub_settings",
            "sub_settings": [{
                "key": "stop-nav-instrument",
                "name": "<b>Intruments</b>",
                "type": "form-list",
                "repeatable": true
            }]
        },
        {
            "key": "hide-repeating-table-list",
            "name": "<b>Repeating instrument tables to hide</b><br>Record Home Page",
            "type": "sub_settings",
            "sub_settings": [{
                "key": "hide-repeating-table",
                "name": "<b>Form</b>",
                "type": "form-list",
                "repeatable": true
            }]
        },
        {
            "key": "full-size-repeating-table-list",
            "name": "<b>Repeating instrument tables to show at full width</b><br>Record Home Page",
            "type": "sub_settings",
            "sub_settings": [{
                "key": "full-size-repeating-table",
                "name": "<b>Form</b>",
                "type": "form-list",
                "repeatable": true
            }]
        },
        {
            "key": "event-tabs",
            "name": "<b>Event Group Tab</b>",
            "type": "sub_settings",
            "repeatable": true,
            "sub_settings": [{
                    "key": "tab-name",
                    "name": "<b>Tab Name</b>",
                    "type": "text"
                },
                {
                    "key": "tab-event",
                    "name": "<b>Include Event</b>",
                    "type": "event-list",
                    "repeatable": true
                }
            ]
        },
        {
            "key": "tab-event-button",
            "name": "<b>Hide event tabs?</b><br>Hide the above tabs by default<br>and use a button to add them, specify button text",
            "type": "text"
        }
    ],
    "compatibility": {
        "redcap-version-min": "8.0.3"
    }
}