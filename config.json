{
    "name": "CTRI Tweaks",
    "description": "Various minor project tweaks.",
    "namespace": "UWMadison\\CTRItweaks",
    "authors": [
        {
            "name": "Adam Nunez",
            "email": "Adam.Nunez@ctri.wisc.edu",
            "institution": "UW Madison - Center for Tobacco Research and Intervention "
        }
    ],
    "permissions": [
        "redcap_every_page_top",
        "redcap_data_entry_form",
        "redcap_project_home_page"
    ],
    "project-settings": [
        {
            "key": "project-home-alert",
            "name": "Home page alert",
            "type": "textarea"
        },
        {
            "key": "prevent-enter-submit",
            "name": "Prevent 'enter' from activating the 'Save & Exit Form' Button",
            "type": "checkbox"
        },
        {
            "key": "hide-save-next-record",
            "name": "Hide 'Save & Go To Next Record' on forms",
            "type": "checkbox"
        },
        {
            "key": "hide-send-survey-link",
            "name": "Hide 'Send Survey Link' step on the 'Save & Return Later' survey page",
            "type": "checkbox"
        },
        {
            "key": "lock-complete-instruments",
            "name": "Lock (readonly, easily unlocked by user) instruments as read only when they are saved as complete?",
            "type": "checkbox"
        },
        {
            "key": "system-management-event",
            "name": "Move event on Record Home to seperate table (used for System Managment events that don't represent a visit)",
            "type": "event-list"
        },
        {
            "key": "tab-event-button",
            "name": "Hide event tabs (configured below) by default and use a button to add them? Button text",
            "type": "text"
        },
        {
            "key": "write-back-from-reports-group",
            "name": "Add Write Back Button",
            "type": "sub_settings",
            "repeatable":true,
            "sub_settings":[
                {
                    "key": "write-back-button-text",
                    "name": "Button text",
                    "type": "text"
                },
                {
                    "key": "write-back-warning-text",
                    "name": "Warning modal text",
                    "type": "text"
                },
                {
                    "key": "write-back-variable",
                    "name": "Write back field",
                    "type": "field-list"
                },
                {
                    "key": "write-back-value",
                    "name": "Write back value",
                    "type": "text"
                },
                {
                    "key": "write-back-report",
                    "name": "Report ID(s) (comma seperated)",
                    "type": "text"
                }
            ]
        },
        {
            "key": "hide-form-row-list",
            "name": "Forms to hide on the Record Home page",
            "type": "sub_settings",
            "sub_settings":[
                {
                    "key": "hide-form-row",
                    "name": "Form",
                    "type": "form-list",
                    "repeatable":true
                }
            ]
        },
        {
            "key": "event-tabs",
            "name": "Event Group Tab",
            "type": "sub_settings",
            "repeatable":true,
            "sub_settings":[
                {
                    "key": "tab-name",
                    "name": "Tab Name",
                    "type": "text"
                },
                {
                    "key": "tab-event",
                    "name": "Event to include",
                    "type": "event-list",
                    "repeatable":true
                }
            ]
        }
    ],
    "compatibility": {
        "redcap-version-min": "8.0.3"
    }
}
